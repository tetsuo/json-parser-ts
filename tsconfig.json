{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": false,
    "declaration": true,
    "lib": ["es6", "es2015"],
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/index.ts"]
}
